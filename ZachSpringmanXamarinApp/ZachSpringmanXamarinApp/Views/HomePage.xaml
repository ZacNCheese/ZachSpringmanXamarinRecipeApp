<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZachSpringmanXamarinApp.Views.HomePage">

    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" Spacing="20" Padding="100">

            <Image Source="recipe_book_icon.png" HeightRequest="100" WidthRequest="100" Aspect="AspectFit" />

            <Label Text="Zachary's Recipe Catalog"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />
            <Label Text="Select a Category From the Left to View Popular Recipes"
                   FontSize="Medium"
                   HorizontalTextAlignment="Center"/>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>